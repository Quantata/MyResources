<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TwoColorActivity">

    <FrameLayout
        android:id="@+id/FragmentFrame"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#FFEB3B"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_red_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:text="Red Fragment"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_blue_fragment"
        app:layout_constraintBottom_toTopOf="@+id/btn_red_fragment"
        android:layout_margin="10dp"
        android:text="BLUE Fragment"/>

</androidx.constraintlayout.widget.ConstraintLayout>